<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_my_places"
        android:name="com.example.showsomeplaces.ui.my_places.MyPlacesFragment"
        android:label="@string/title_my_places"
        tools:layout="@layout/fragment_my_places" />

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.showsomeplaces.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.example.showsomeplaces.ui.search.SearchFragment"
        android:label="Search"
        tools:layout="@layout/fragment_search" />
</navigation>
